<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hanium.mapper.UserMapper">
	<select id="getList" resultType="com.hanium.domain.UserVO">
		select * from user;
	</select>
	<select id="read" resultType="com.hanium.domain.UserVO">
		select * from user where userid =
		#{userid}
	</select>
	<insert id="insert">
		insert into user (userid,userptype,userdept,username,userpw,useremail,userbirth,userphone)
		values
		(#{userid},#{userptype},#{userdept},#{username},#{userpw},#{useremail},#{userbirth},#{userphone})
	</insert>
	<update id="update">
		update user
		set userptype=#{userptype},
		userdept=#{userdept}
		username=#{username}
		userpw=#{userpw}
		useremail=#{useremail}
		userbirth=#{userbirth}
		userphone=#{userphone}
		where userid=#{userid}
	</update>
</mapper>